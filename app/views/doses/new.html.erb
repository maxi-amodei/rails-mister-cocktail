<div class="container">
  <h1>New ingredient for <strong><%= @cocktail.name %></strong> cocktail </h1>
  <br>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>


  